@model List<CarRentalAppMvc.Models.VehicleWorkingTime>

@{
    ViewData["Title"] = "Create Vehicle Working Time"; <!-- Sayfa başlığı -->
}


@{
    Layout = null;
}
<h1>Vehicle Working Times</h1>

<table class="table table-striped">
    <thead>
        <tr>

            <th>Vehicle Name</th>
            <th>LicensePlate</th>
            <th>Active Work Time</th>
            <th>Maintenanc Time</th>
            <th>Çalışma Zamanı</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row-@item.Id">
                <td>@item.Vehicle.Name</td>
                <td>@item.Vehicle.LicensePlate</td>
                <td>@item.ActiveWorkTime</td>
                <td>@item.MaintenanceTime</td>
                <td class="idle-time">@item.IdleTime</td> <!-- IdleTime burada görüntüleniyor -->
                <td>
                    <!-- Düzenle Linki: Edit işlemine yönlendirir -->
                    <!-- Detay Linki: Details işlemine yönlendirir -->
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detay</a>

                    <!-- Sil Linki: Delete işlemine yönlendirir -->
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>

            </tr>
        }
    </tbody>
</table>



