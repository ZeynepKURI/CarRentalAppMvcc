@model CarRentalAppMvc.Models.Vehicle

@{
    ViewData["Title"] = "Edit Vehicle";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            max-width: 900px;
            padding: 40px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            margin-top: 50px; 
            margin-bottom: 50px; 
            flex: 1;
        }

        h2 {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: bold;
            color: #343a40;
            margin-bottom: 30px;
            text-align: center; 
        }

        .form-label {
            font-size: 1.1rem;
            font-weight: 500;
        }

        .form-control {
            border-radius: 8px;
            font-size: 1.1rem;
            padding: 15px;
        }

        .btn {
            font-weight: bold;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn:hover {
            transform: scale(1.05);
            transition: all 0.3s ease-in-out;
        }

        .btn:focus {
            box-shadow: none;
        }

        .btn-lg {
            padding: 12px 24px;
            font-size: 1.1rem;
        }

        .mb-4 {
            margin-bottom: 1.5rem !important;
        }

     
    </style>
</head>
<body>

    <div class="container">
       
        <h2>Edit Vehicle</h2>

        <form method="post" asp-action="Edit">
            <div class="row mb-4">
                <div class="col-md-6">
                    <label for="Name" class="form-label">Araç Adı</label>
                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="col-md-6">
                    <label for="LicensePlate" class="form-label">Araç Plakası</label>
                    <input type="text" id="LicensePlate" name="LicensePlate" class="form-control" value="@Model.LicensePlate" required />
                    <span class="text-danger" asp-validation-for="LicensePlate"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success btn-lg">Kaydet</button>
                <a href="/" class="btn btn-secondary btn-lg">Geri</a>
            </div>
        </form>
    </div>

   

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
