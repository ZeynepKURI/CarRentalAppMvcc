@model CarRentalAppMvc.Models.Vehicle

@{
    ViewData["Title"] = "Create Vehicle";
}

<h1>Create New Vehicle</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LicensePlate" class="control-label"></label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a href="@Url.Action("Index", "Vehicle")">Back to List</a>
