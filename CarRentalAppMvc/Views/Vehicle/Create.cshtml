@{
    Layout = null;
}

@model CarRentalAppMvc.Models.Vehicle

@{
    ViewData["Title"] = "Create Vehicle";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Araç Kiralama Yönetim Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"><script
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <style>
        /* Custom styles */
        body {
            font-family: 'Poppins', sans-serif;
        }

        .modal-header, .modal-footer {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">Araç Kiralama</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="#">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Araç Kaydı</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Çalışma Süresi Girişi</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Raporlar</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Çıkış Yap</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Welcome Section -->
    <header class="bg-light text-center py-5">
        <h1>Hoş Geldiniz, Admin!</h1>
        <p class="lead">Araç Kiralama Yönetim Paneline hoş geldiniz.</p>
    </header>

    <!-- Quick Actions Section -->
    <div class="container my-5">
        <div class="row text-center">
            <!-- Admin Card: Add Vehicle -->
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title">Araç Kaydı</h5>
                        <p class="card-text">Yeni araç ekleyin.</p>
                        <!-- Button to open modal -->
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#vehicleModal">Araç Ekle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Creating Vehicle -->
    <div class="modal fade" id="vehicleModal" tabindex="-1" aria-labelledby="vehicleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="vehicleModalLabel">Yeni Araç Kaydı</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">Araç Adı</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="LicensePlate" class="control-label">Plaka</label>
                            <input asp-for="LicensePlate" class="form-control" />
                            <span asp-validation-for="LicensePlate" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-primary text-white text-center py-3">
        <p>© 2024 Araç Kiralama Yönetim Paneli. Tüm hakları saklıdır.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
